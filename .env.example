# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
CHAT_MODEL=gpt-oss:20b
EMBED_MODEL=embeddinggemma:300m
OLLAMA_AUTO_PULL=1

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=documents
EMBEDDING_DIM=768

# MCP Server URLs (comma-separated)
MCP_SERVER_URLS=http://mcp_web:7001/,http://mcp_semantic:7002/,http://mcp_datetime:7003/

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001
LOG_LEVEL=INFO
# Comma-separated list of allowed CORS origins
FRONTEND_ORIGIN=http://localhost:8000,http://127.0.0.1:8000
# Strong API key for production - CHANGE THIS!
ROOT_API_KEY=dev-root-key
# Separate secret for JWT token signing - CHANGE THIS!
JWT_SECRET=dev-jwt-secret

# Ingestion / Whisper Configuration
INGEST_WHISPER_MODEL=
INGEST_WHISPER_COMPUTE_TYPE=
INGEST_WHISPER_GPU_COMPUTE_TYPE=
INGEST_WHISPER_CPU_THREADS=
INGEST_WHISPER_NUM_WORKERS=
INGEST_WHISPER_LANGUAGE=
INGEST_WHISPER_ACCELERATOR=
INGEST_WHISPER_DEVICE=

# Ingestion Paths
INGEST_UPLOAD_ROOT=/data/uploads
INGEST_EXAMPLES_DIR=/data/examples

# Agent Configuration
MAX_AGENT_ITERATIONS=10
AGENT_DEFAULT_LANGUAGE=it

# Database Configuration (for production, use strong passwords)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=youworker
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/youworker

# Frontend Configuration
NEXT_PUBLIC_API_KEY=dev-root-key
NEXT_PUBLIC_API_BASE_URL=
NEXT_PUBLIC_API_PORT=8001
NEXT_INTERNAL_API_BASE_URL=http://api:8001

# MCP Configuration
