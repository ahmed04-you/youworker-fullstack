{
  "$schema": "https://raw.githubusercontent.com/stryker-mutator/stryker/master/packages/api/report/schema.json",
  "packageManager": "npm",
  "reporters": ["html", "clear-text", "progress"],
  "testRunner": "vitest",
  "coverageAnalysis": "perTest",
  "tsconfigFile": "tsconfig.json",
  "mutate": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/test/**"
  ],
  "testFiles": [
    "src/test/**/*.ts"
  ],
  "mutator": {
    "name": "typescript",
    "excludedMutations": [
      "ArrayDeclaration",
      "ObjectLiteralAssignment"
    ]
  },
  "thresholds": {
    "high": 80,
    "low": 60
  }
}